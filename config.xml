<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dsjn.s2p" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>S2P</name>
    <description>
        S2P App
    </description>
    <author email="denis.jacquemin@gmail.com" href="http://tobedefine.be">
        Denis Jacquemin
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
<!--
    <access origin="*" />
-->
    <access origin="*://s2p-api-demo.herokuapp.com/*" />
    <access origin="*://s2p-api.herokuapp.com/*" />
    <access origin="*://s2p-demo.s3-eu-west-1.amazonaws.com/*" />
    <access origin="https://*.firebaseio.com/*" />

<!--

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
-->


    <platform name="android">
        <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />
        <preference name="fullscreen" value="false" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="DisallowOverscroll" value="true" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <config-file target="*-Info.plist" parent="NSAppTransportSecurity">
          <dict>
              <key>NSAllowsArbitraryLoads</key>
              <true/>
          </dict>     
        </config-file>
    </platform>
    <engine name="ios" spec="~4.1.1" />
    <engine name="android" spec="~5.1.1" />


</widget>
